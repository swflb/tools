#!/bin/bash
if [[ -z "${QTDIR}" ]]
then
	QT\_PREFIXES="/usr/lib64/qt/5.5/gcc\_64"

	for QTDIR in ${QT\_PREFIXES}
	do
		test -d "${QTDIR}" && break
	done
	unset QT\_PREFIXES

	if ! echo ${PATH} | /bin/grep -q $QTDIR/bin
	then
		PATH=$QTDIR/bin:${PATH}
	fi

	QTINC="$QTDIR/include"
	QTLIB="$QTDIR/lib"

	export QTDIR QTINC QTLIB PATH
fi
